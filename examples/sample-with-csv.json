{
  "$schema": "../versions/1.0.schema.json",
  "salahapi": "1.0",
  "info": {
    "title": "New York Islamic Center Prayer Times",
    "description": "Prayer times for New York City using ISNA calculation method with CSV data overrides for special occasions",
    "version": "1.0.0",
    "contact": {
      "name": "Prayer Times Support",
      "email": "support@nyislamiccenter.org",
      "url": "https://nyislamiccenter.org"
    }
  },
  "location": {
    "latitude": 40.7128,
    "longitude": -74.0060,
    "timezone": "America/New_York",
    "city": "New York",
    "country": "United States",
    "dateFormat": "YYYY-MM-DD",
    "timeFormat": "HH:mm"
  },
  "calculationMethod": {
    "name": "isna",
    "fajrAngle": 15,
    "ishaAngle": 15,
    "asrCalculationMethod": "standard",
    "highLatitudeAdjustment": "middleOfTheNight",
    "jumuahRules": [
      {
        "name": "Jumuah 1",
        "time": {
          "static": "12:30",
          "overrides": [
            {
              "condition": "daylightSavingsTime",
              "time": {
                "static": "13:30"
              }
            }
          ]
        },
        "location": {
          "name": "New York Islamic Center",
          "address": "123 Main St, New York, NY 10001"
        }
      },
      {
        "name": "Jumuah 2",
        "time": {
          "change": "weekly",
          "roundMinutes": 15,
          "afterAthanMinutes": 30,
          "overrides": [
            {
              "condition": "daylightSavingsTime",
              "time": {
                "static": "14:30"
              }
            }
          ]
        },
        "location": {
          "name": "New York Islamic Center",
          "address": "123 Main St, New York, NY 10001"
        }
      }
    ]
  },
  "dailyPrayerTimes": {
    "csvUrl": "https://nyislamiccenter.org/api/csv_prayer_times",
    "csvUrlParameters": {
      "fromDate": {
        "in": "query",
        "type": "fromDate",
        "format": "YYYY-MM-DD"
      },
      "toDate": {
        "in": "query",
        "type": "toDate",
        "format": "YYYY-MM-DD"
      },
      "longitude": {
        "in": "query",
        "value": -74.0060
      }
    },
    "dateFormat": "YYYY-MM-DD",
    "timeFormat": "HH:mm"
  }
}
